{
  "name": "config-ninja",
  "version": "1.0.0",
  "description": "A config-creator application with PWA support",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "server": "node server/index.js",
    "fs-server": "tsx src/server/fileSystemApi.ts",
    "dev:server": "nodemon server/index.js",
    "dev:fs-server": "nodemon --exec tsx src/server/fileSystemApi.ts",
    "start": "concurrently \"npm run dev\" \"npm run dev:server\" \"npm run dev:fs-server\"",
    "start:prod": "node server/index.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "start-server-and-test \"npm run dev\" 3001 \"npm run dev:server\" 8002 \"cypress run\"",
    "test:e2e:open": "start-server-and-test \"npm run dev\" 3001 \"npm run dev:server\" 8002 \"cypress open\""
  },
  "proxy": "http://localhost:8002",
  "keywords": [
    "react",
    "typescript",
    "vite",
    "pwa",
    "config-creator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^8.2.0",
    "cypress": "^13.17.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "nodemon": "^3.0.1",
    "start-server-and-test": "^2.0.12",
    "ts-jest": "^29.4.0",
    "tsx": "^3.12.7",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-pwa": "^0.16.4",
    "workbox-window": "^7.0.0"
  }
}
